<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--EditText-->
    <style name="myEditText">
        <item name="android:paddingStart">  10dp</item>
        <item name="android:paddingTop">    10dp</item>
        <item name="android:paddingBottom"> 10dp</item>
        <item name="android:paddingEnd">    10dp</item>
        <item name="android:layout_marginTop">      5dp</item>
        <item name="android:layout_marginBottom">   5dp</item>
        <item name="android:background">@drawable/style_edit_text</item>
    </style>

    <!--Item ListView-->
    <style name="myListView" parent="Widget.AppCompat.ListView">
        <item name="android:paddingTop">    10dp</item>
        <item name="android:paddingBottom"> 10dp</item>
        <item name="android:layout_marginTop">      5dp</item>
        <item name="android:layout_marginBottom">   5dp</item>
        <item name="android:background">@drawable/style_list_view</item>
    </style>

    <!--Text-->
    <style name="myText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

</resources>